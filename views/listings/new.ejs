<% layout("/layouts/boilerplate") %> <br /><br />
<div class="row mt-3">
  <div class="col-8 offset-2">
    <body>
      <h3>Create a new hotel</h3>
      <form method="post" action="/listing" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Enter the name of hotel"
            type="text"
            class="form-control"
            required />
          <div class="invalid-feedback">Title shoould be entred</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter the description of hotel"
            class="form-control"
            required></textarea>
          <div class="invalid-feedback">
            Enter a short description for the hotel
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image_Link</label>
          <input
            name="listing[image]"
            placeholder="Enter the url/link of image of hotel"
            type="text"
            class="form-control" />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="Enter the price of hotel"
            class="form-control"
            required />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="Enter the country of hotel"
              type="text"
              class="form-control"
              required />
            <div class="invalid-feedback">Country should be entered</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              name="listing[location]"
              placeholder="Enter the location of hotel"
              type="text"
              class="form-control"
              required />
            <div class="invalid-feedback">Enter the location of hotel</div>
          </div>
        </div>
        <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
      </form>
    </body>
  </div>
</div>
<br /><br />
